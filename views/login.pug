extends layouts/frontend

block content
    .ui.middle.aligned.center.aligned.grid
        .six.wide.column
            form.ui.large.form(method="post", action="/login", class=errorHeader?"error":"")
                .ui.error.message
                    .header #{errorHeader}
                    p &bull; #{errorMessage}
                .ui.stacked.segment
                    +field('email', 'email', 'your.email@address.tld', email)
                    +field('password', 'password', 'Password')
                    button(type="submit").ui.fluid.large.teal.submit.button Login


mixin field(type, name, placeholder, value)
    .field
        .ui.left.icon.input
            i.icon(class=(type === 'password' ? 'lock' : 'user'))
            input(type=type, name=name, placeholder=placeholder, value=value)
